<?xml version="1.0" encoding="utf-8"?>
    
     <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="horizontal" >
            <ImageView
             android:layout_width="50dp"
             android:layout_height="50dp"
             android:layout_centerVertical="true"
             android:layout_marginTop="2sp"
             android:layout_marginLeft="10sp"
             android:src="@drawable/food1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:orientation="vertical" >
            
                    <TextView
                android:id="@+id/shiwuming"
             android:layout_marginLeft="10sp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="柳叶蒸饺"
             android:textStyle="bold"
             android:textSize="18dp" />
                    <TextView
                android:id="@+id/xiaoliang"
               android:layout_marginLeft="10sp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="月售  100单"
             android:textSize="10dp" />
                    
 <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             android:orientation="horizontal" >

     <TextView
         android:id="@+id/shiwujiage"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginLeft="10sp"
         android:layout_weight="0.51"
         android:text="￥  5"
         android:textColor="#FF8C00"
         android:textSize="12dp" />

     <TextView
        
             android:layout_weight="1"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content" />

     <ImageView
         android:id="@+id/sp_jian"
         android:layout_width="20dp"
         android:layout_height="20dp"
         android:layout_weight="0.16"
         android:src="@drawable/jian" />

      <TextView
          android:id="@+id/sp_shuliang"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="4sp"
          android:layout_centerVertical="true"
          android:text="0"
          android:textSize="18dp" />

       <ImageView
           android:id="@+id/sp_jia"
           android:layout_width="20dp"
           android:layout_height="20dp"
           android:layout_centerVertical="true"
           android:layout_weight="0.15"
           android:src="@drawable/jia" />
                     
                </LinearLayout>
                    
                    
                </LinearLayout>
               
           </LinearLayout>