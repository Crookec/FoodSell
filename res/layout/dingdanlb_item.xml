<?xml version="1.0" encoding="utf-8"?>
    
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal" >

         <ImageView
             android:id="@+id/diantu"
            android:layout_width="0dp"
             android:layout_weight="1"
             android:layout_height="50dp"
             android:src="@drawable/d_sx" 
              android:layout_marginTop="5dp" />  
             
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="3.42"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/dianming"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="4"
                    android:text="沙县小吃"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                       android:id="@+id/ddzhuangtai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:text="订单已完成"
                    android:textSize="10dp" />
            </LinearLayout>

            <TextView
                   android:id="@+id/ddshijian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="下单时间  2016-12-03  13:04"
                android:textSize="10dp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@android:color/darker_gray" />       
  <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
            <Button
          android:id="@+id/ddxiangqing"
          android:layout_width="wrap_content"
          android:layout_height="32dp"
          android:text="订单详情"
          android:textSize="10dp"
            android:layout_weight="1" />

      <Button
          android:id="@+id/qpingjia"
          android:layout_width="wrap_content"
          android:layout_height="32dp"
          android:text="去评价"
          android:textSize="10dp"
            android:layout_weight="1" />

  </LinearLayout>

        </LinearLayout>
  
  </LinearLayout>


